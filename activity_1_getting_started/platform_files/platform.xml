<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid/simgrid.dtd">
<platform version="4.1">
    <zone id="AS0" routing="Full">

        <!-- 10 teraflop hosts -->
        <host id="Tremblay" speed="1000Gf" core="1"/>
        <host id="Jupiter" speed="1000Gf" core="1"/>
        <host id="Fafard" speed="1000Gf" core="1"/>

        <!-- 1Gbps bandwidth & 0.1 second latency --> 
        <link id="1" bandwidth="10MBps" latency="10us"/>

        <route src="Tremblay" dst="Jupiter">
            <link_ctn id="1"/>
        </route>
        <route src="Fafard" dst="Tremblay">
            <link_ctn id="1"/>
        </route>
        <route src="Fafard" dst="Jupiter">
            <link_ctn id="1"/>
        </route>
    </zone>
</platform>
