<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid/simgrid.dtd">
<platform version="4.1">
  <zone id="AS0" routing="Full">

    <!-- HPC cluster 9, 1Tf nodes w/125MB links  -->
    <cluster id="hpc.edu" prefix="hpc.edu/node_" suffix="" radical="0-8"
              router_id= "hpc_gateway" core="1" speed="1000Gf" bw="125MBps" lat="10us">
      <prop id="ram" value="32000000000"/>
    </cluster>

    <zone id="AS2" routing="None">
        <host id="storage_db.edu" speed="1000Gf" core="1"/>
    </zone>

    <zone id="AS3" routing="Full">
        <host id="my_lab_computer.edu" speed="1000Gf" core="1"/>
    </zone>

    <link id="link1" bandwidth="10MBps" latency="100us"/>

    <zoneRoute src="AS2" dst="hpc.edu" gw_src="storage_db.edu" gw_dst="hpc_gateway">
      <link_ctn id="link1"/>
    </zoneRoute>

    <zoneRoute src="AS3" dst="hpc.edu" gw_src="my_lab_computer.edu" gw_dst="hpc_gateway">
      <link_ctn id="link1"/>
    </zoneRoute>

    <zoneRoute src="AS3" dst="AS2" gw_src="my_lab_computer.edu" gw_dst="storage_db.edu">
      <link_ctn id="link1"/>
    </zoneRoute>

  </zone>
</platform>
